<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="85sp"
        android:paddingTop="@dimen/recycler_view_default_pad"
        android:paddingBottom="@dimen/recycler_view_default_pad"
        android:paddingLeft="@dimen/recycler_view_default_pad"
        android:paddingRight="@dimen/recycler_view_default_pad"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="35sp"
                />
            <TextView
                android:id="@+id/alarm_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alarm"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/recycler_view_default_pad"
            >
            <TextView
                android:id="@+id/short_day_1"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_1"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/short_day_2"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_2"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/short_day_3"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_3"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/short_day_4"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_4"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/short_day_5"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_5"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/short_day_6"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_6"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/short_day_7"
                android:layout_width="@dimen/short_day_width"
                android:layout_height="@dimen/short_day_height"
                android:text="@string/short_day_7"
                android:textSize="@dimen/short_day_font_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/alarm_enabled_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a6a5a5"
        />

</LinearLayout>